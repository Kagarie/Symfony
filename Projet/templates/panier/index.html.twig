{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    {% if items | length > 0 %}
        <table class="table" style="width: 80%; margin: 0 auto;">
            <thead>
            <tr>
                <th>Album</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.album.titre }}</td>
                    <td>{{ item.album.prix/100 }}€</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.album.prix*item.quantity/100 }}€</td>
                    <td>
                        <a href="{{ path('panier_remove',{'id': item.album.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash" style="color: #FFFFFF">supprimer</i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total :</td>
                <td>{{ total }}€</td>
                <td></td>
            </tr>
            </tfoot>
        </table>

    {% else %}
        <p style="text-align: center">Votre panier et vide </p>
    {% endif %}
{% endblock %}
